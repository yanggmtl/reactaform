{
  "name": "reactaform",
  "version": "1.8.7",
  "description": "A powerful, type-safe React form builder library with dynamic field rendering, conditional visibility, multi-language support, and extensible validation",
  "keywords": [
    "react",
    "form",
    "form-builder",
    "typescript",
    "validation",
    "dynamic-forms",
    "i18n",
    "react-form",
    "form-library",
    "conditional-fields"
  ],
  "author": "yanggmtl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanggmtl/reactaform.git",
    "directory": "packages/reactaform"
  },
  "homepage": "https://github.com/yanggmtl/reactaform#readme",
  "bugs": {
    "url": "https://github.com/yanggmtl/reactaform/issues"
  },
  "main": "dist/reactaform.cjs.js",
  "module": "dist/reactaform.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/reactaform.es.js",
      "require": "./dist/reactaform.cjs.js"
    },
    "./style.css": "./dist/reactaform.css",
    "./themes/*.css": "./dist/themes/*.css"
  },
  "files": [
    "dist",
    "README.md",
    "README.full.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css",
    "dist/**/*.css"
  ],
  "peerDependencies": {
    "react": ">=18.0.0 <20",
    "react-dom": ">=18.0.0 <20"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "build:types": "tsc -p tsconfig.build.json --noEmit false",
    "build:lib": "cross-env NODE_ENV=development vite build --mode development --config vite.lib.config.ts && npm run build:types && node scripts/copy-themes.js",
    "build:prod": "cross-env NODE_ENV=production vite build --config vite.lib.config.ts && npm run build:types && node scripts/copy-themes.js",
    "build:pack": "npm run build:prod && npm pack",
    "prepublishOnly": "npm run build:prod",
    "test": "vitest run --config ./vitest.config.ts",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint -c eslint.config.mjs \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --max-warnings=0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {},
  "engines": {
    "node": ">=18"
  }
}
