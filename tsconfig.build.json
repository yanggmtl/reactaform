{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",

    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": []
  },
  "include": [
    "src/**/*",
    "src/locales/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/**/test/**",
    "src/**/__tests__/**",
    "src/tests/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules"
  ]
}
